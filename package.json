{
    "name": "gh-pro-view",
    "version": "0.0.1",
    "description": "Github PR View Extension",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamogbz/gh-pro-view.git"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/gh-pro-view/issues"
    },
    "homepage": "https://github.com/iamogbz/gh-pro-view#readme",
    "license": "GPL-3.0",
    "keywords": [
        "node",
        "github",
        "pullrequest",
        "typescript",
        "chrome",
        "webextension",
        "package"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "index.js",
    "scripts": {
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "test": "jest",
        "test-watch": "jest --watch",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "semantic-release-chrome",
                {
                    "asset": "release.zip",
                    "extensionId": "kcghmfiabkomnbibgfahnhfdongpjobf"
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "release.zip"
                        }
                    ]
                }
            ]
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "tslint"
        ],
        "*.{js,ts}": [
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.6",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/travis-cli": "^8.3.5",
        "@types/chrome": "0.0.98",
        "@types/copy-webpack-plugin": "^5.0.0",
        "@types/jest": "^25.1.3",
        "@types/lodash": "^4.14.149",
        "@types/node": "^13.7.6",
        "@types/react": "^16.9.23",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^4.41.7",
        "acorn": "^7.1.1",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.0.6",
        "commitizen": "^4.0.3",
        "copy-webpack-plugin": "^5.1.1",
        "coveralls": "^3.0.9",
        "crx-livereload": "^0.2.1",
        "cz-conventional-changelog": "^3.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.3",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-mock-props": "^1.7.2",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "prettier-tslint": "^0.4.2",
        "responsive-json-webpack-plugin": "^1.5.2",
        "rxjs": "^6.5.4",
        "semantic-release": "^17.0.4",
        "semantic-release-chrome": "^1.1.3",
        "stylelint": "^13.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.6.2",
        "tslint": "^6.0.0",
        "typescript": "^3.8.2",
        "webextension-polyfill-ts": "^0.12.0",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@babel/runtime": "^7.8.4",
        "@types/cheerio": "^0.22.16",
        "cheerio": "^1.0.0-rc.3",
        "dom-chef": "^3.6.3",
        "dom-loaded": "^2.0.0",
        "lodash": "^4.17.15",
        "select-dom": "^6.0.0",
        "type-fest": "^0.11.0",
        "webext-options-sync": "^1.2.2"
    }
}
