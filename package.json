{
    "name": "gh-pro-view",
    "version": "0.0.1",
    "description": "Github PR View Extension",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamogbz/gh-pro-view.git"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/gh-pro-view/issues"
    },
    "homepage": "https://github.com/iamogbz/gh-pro-view#readme",
    "license": "GPL-3.0",
    "keywords": [
        "node",
        "github",
        "pullrequest",
        "typescript",
        "chrome",
        "webextension",
        "package"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "index.js",
    "scripts": {
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "test": "jest",
        "test-watch": "jest --watch",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "semantic-release-chrome",
                {
                    "asset": "release.zip",
                    "extensionId": "kcghmfiabkomnbibgfahnhfdongpjobf"
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "release.zip"
                        }
                    ]
                }
            ]
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "rules": {
            "header-max-length": [0, "always", 0]
        },
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "tslint"
        ],
        "*.{js,ts}": [
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.10.4",
        "@babel/core": "^7.10.3",
        "@babel/plugin-transform-runtime": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.1",
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@commitlint/travis-cli": "^9.0.1",
        "@types/chrome": "0.0.120",
        "@types/copy-webpack-plugin": "^6.0.0",
        "@types/jest": "^26.0.4",
        "@types/lodash": "^4.14.157",
        "@types/node": "^14.0.14",
        "@types/react": "^16.9.42",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^4.41.18",
        "acorn": "^7.3.1",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.1.2",
        "copy-webpack-plugin": "^6.0.3",
        "coveralls": "^3.1.0",
        "crx-livereload": "^0.2.1",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.3.1",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "husky": "^4.2.5",
        "jest": "^25.5.4",
        "jest-mock-props": "^1.7.3",
        "lint-staged": "^10.2.11",
        "prettier": "^1.19.1",
        "prettier-eslint": "^11.0.0",
        "prettier-tslint": "^0.4.2",
        "responsive-json-webpack-plugin": "^1.5.2",
        "rxjs": "^6.6.0",
        "semantic-release": "^17.1.1",
        "semantic-release-chrome": "^1.1.3",
        "stylelint": "^13.6.1",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "ts-jest": "^25.5.1",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.2",
        "typescript": "^3.9.6",
        "webextension-polyfill-ts": "^0.19.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "@babel/runtime": "^7.10.4",
        "@types/cheerio": "^0.22.18",
        "cheerio": "^1.0.0-rc.3",
        "dom-chef": "^4.1.0",
        "dom-loaded": "^2.0.0",
        "lodash": "^4.17.19",
        "select-dom": "^6.0.2",
        "type-fest": "^0.16.0",
        "webext-options-sync": "^1.2.3"
    }
}
